@using TwitHub.Data.Entities;
@model Tweet

<div class="card">
    <div class="row g-0">
        <div class="col-md-2">
            <img src="~/img/twithubmain.png" class="userlistimg">
        </div>
        <div>
            <form method="post" asp-controller="tweet" asp-action="edit">
                <div class="form-control">
                    <input type="hidden" asp-for="Id" value=@Model.Id />
                    <input type="hidden" asp-for="ApplicationUser" value="@Model.ApplicationUser" />
                    <label asp-for="Text">Tweet</label>
                    <textarea asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-dark me-md-2 btn-lg">Tweet</button>
                </div>
            </form>
        </div>
    </div>
</div>