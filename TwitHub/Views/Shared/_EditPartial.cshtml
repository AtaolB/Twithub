@using TwitHub.Data.Entities;
@model Tweet

<!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#Edit+@Model.Id">
    Edit
</button>

<!-- Modal -->
<div class="modal fade" id="Edit+@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Tweet</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-controller="Tweet" asp-action="Edit">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" value=@Model.Id />
                    <input type="hidden" asp-for="ApplicationUser" value="@Model.ApplicationUser" />
                    <div class="form-control">
                        <h5 class="card-title">@Model.ApplicationUser</h5>
                        <p class="text-muted">@Model.CreatedDate</p>
                        <textarea asp-for="Text" class="form-control"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-warning">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>